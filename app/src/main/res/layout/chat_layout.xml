<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >

        <LinearLayout
            android:id="@+id/userLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="100dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/userMessageID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:background="@drawable/user_msg_back"
                android:text="How are you bro"
                android:textColor="#424242"
                />

            <TextView
                android:id="@+id/userMessageTimeID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="11dp"
                android:layout_marginTop="5dp"
                android:text="02-07-2023 08:53 PM"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/myLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="50dp"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            >

            <TextView
                android:id="@+id/myMessageID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:background="@drawable/my_msg_back"
                android:text="How are you bro"
                android:textColor="#FFFFFF"
                />

            <TextView
                android:id="@+id/myMessageTimeID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="11dp"
                android:layout_marginTop="5dp"
                android:text="02-07-2023 08:53 PM"
                android:layout_gravity="end"
                />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>